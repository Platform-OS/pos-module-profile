{% liquid
  #Params:
  #  - id: string (optional)
  #  - user_id: string (optional)

  if user_id == blank and id == blank
    log 'ERROR: missing ID argument in modules/profile/queries/profile/find'
    return nil
  endif

  graphql result = 'modules/profile/profiles/search', user_id: user_id, id: id, limit: 1, page: 1
  assign profile = result.records.results.first
  assign profile = profile | hash_merge: profile.properties

  return profile
%}
